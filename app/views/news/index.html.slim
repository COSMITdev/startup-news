- collection.newests.page(params[:page]).per(20).each do |news|
  .news-box
    .controls
      button type="button" class="btn btn-default btn-sm"
        = link_to vote_up_news_path(news) do
          span class="glyphicon glyphicon-chevron-up"
      button type="button" class="btn btn-default btn-sm"
        = link_to vote_down_news_path(news) do
          span class="glyphicon glyphicon-chevron-down"
    h4 = link_to truncate(news.title, length: 90, omission: '...'), news.link, target: "_blank"
    p.link = host_for_link(news.link)
    p.timestamp
      = "#{time_ago_in_words(news.created_at)} atrás "
      |  por 
      strong = news.user.username
      = " · "
      = link_to "(#{news.comments.count}) comentários", news_path(news)

  /.well.well-sm.col-md-12
    h3 = truncate(news.title, length: 90, omission: '...')
    p
      = link_to 'Up', vote_up_news_path(news), method: :post, remote: true
      br
      = link_to 'Down', vote_down_news_path(news), method: :post, remote: true
    p
     small = link_to host_for_link(news.link), news.link, target: 'blank'
    p
      strong = "#{time_ago_in_words(news.created_at)} atrás "
      |  por
      strong = news.user.username
      = " · (#{news.comments.count}) comentários"

